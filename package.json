{
  "name": "ccpp-file-outline-generator",
  "displayName": "C/C++ File Outline Generator",
  "description": "Generate outline files for C/C++ files, providing a structured view of the code elements.",
  "version": "0.0.1",
  "publisher": "dutu-mike",
  "repository": {
    "type": "git",
    "url": "https://github.com/Silent0612/driver-outline-generator.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "extensionDependencies": [
    "ms-vscode.cpptools"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ccppFileOutline.generate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ccppFileOutline.generate",
        "title": "Generate C/C++ File Outline",
        "category": "C/C++ File Outline Generator"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ccppFileOutline.generate",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ],
      "commandPalette": [
        {
          "command": "ccppFileOutline.generate"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}